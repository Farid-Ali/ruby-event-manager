<html>
<head>
  <meta charset='utf-8'>
  <title>User Matrics</title>
</head>
<body>
  <h1>User Matrics</h1>
  <table>
    <% if !user_names.empty? %>
      <th>User Name</th><th>Phone Number</th>
      <% user_phone_numbers_index = 0 %>
        <% user_names.each do |name| %>
        <tr>
          <td><%=name%></td>
          <td><%=user_phone_numbers[user_phone_numbers_index]%></td>
        </tr>
          <% user_phone_numbers_index += 1 %>
        <% end %>
    <% else %>
      <th>About User</th>
      <td>No register found</td>
    <% end %>
  </table>

  <table>
    <% if registration_hours.kind_of?(Array) %>
      <th>Hour of The Day When User Registered</th><th>No of User Registered</th>
        <% while registration_hours.length > 0 %>
          <% registration_counter = registration_hours.count(registration_hours.first) %>
        <tr>
          <td><%=registration_hours.first%></td>
          <td><%=registration_counter%></td>
        </tr>
          <% registration_hours = registration_hours.select { |a| a != registration_hours.first } %>
        <% end %>
    <% else %>
      <th>Hours of The Day When User Registered</th>
      <td>No register found</td>
    <% end %>
  </table>

  <table>
    <% if registration_days.kind_of?(Array) %>
      <th>Days of the Week When User Registered</th><th>No of User Registered</th>
        <% while registration_days.length > 0 %>
          <% registration_counter = registration_days.count(registration_days.first) %>
        <tr>
          <td><%=registration_days.first%></td>
          <td><%=registration_counter%></td>
        </tr>
          <% registration_days = registration_days.select { |a| a != registration_days.first } %>
        <% end %>
    <% else %>
      <th>Days of The Week When User Registered</th>
      <td>No register found</td>
    <% end %>
  </table>
</body>
</html>